<html>
    {% include '/utils/headers.html.twig' %}

    <body>
        {% include '/utils/menu.html.twig' %}

        <div class="container-fluid">
            <div class="row">
                <div class="col"></div>
                <div class="col-10 main-content-bg">
                    <div class="container">
                        <br/><br/>
                        <div class="row">
                            <div class="col"></div>
                            <div class="col-10 card">
                                <h1>Mot de passe oublié</h1>
                                <br/>
                                <form class="card-body" method="POST" action="/access/process_lost_password/">
                                    <div class="form-group">
                                        <label>Adresse e-mail associée au compte</label>
                                        <input type="email" class="form-control" name="email" />
                                    </div>
                                    
                                    <br/>
                                    <div class="form-group">
                                        <input type="submit" value="Envoyer un mail de récupération" class="container-fluid btn btn-primary" />
                                    </div>
                                </form>

                                {% if login_failed %}
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <h4 class="alert-heading">Ooooop'ss</h4>
                                        <hr/>
                                        <p>Demande de connexion non aboutie</p>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col"></div>
                        </div>
                    </div>
                </div>
                <div class="col"></div>
            </div>
        </div>

        {% include '/utils/js_imports.html.twig' %}
    </body>
</html>