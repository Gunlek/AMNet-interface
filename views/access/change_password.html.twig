<html>
    {% include '/utils/headers.html.twig' %}

    <body>
        {% include '/utils/menu.html.twig' %}

        <div class="container-fluid">
            <div class="row">
                <div class="col"></div>
                <div class="col-10 main-content-bg">
                    <div class="container">
                        <br/><br/>
                        <div class="row">
                            <div class="col"></div>
                            <div class="col-10 card">
                                <h1>Saisissez le nouveau mot de passe</h1>
                                <br/>
                                <form class="card-body" method="POST" action="/access/update_password/">
                                    <div class="form-group">
                                        <label>Nouveau mot de passe</label>
                                        <input type="password" class="form-control" name="password" />
                                    </div>
            
                                    <div class="form-group">
                                        <label>Confirmez le nouveau mot de passe</label>
                                        <input type="password" class="form-control" name="conf_password" />
                                    </div>

                                    <input type="hidden" name="token" value="{{ token }}" />
                                    <br/>
                                    <div class="form-group">
                                        <input type="submit" value="Mettre Ã  jour le mot de passe" class="container-fluid btn btn-primary" />
                                    </div>
                                </form>

                                {% if password_change_failed %}
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <h4 class="alert-heading">Ooooop'ss</h4>
                                        <hr/>
                                        <p>Les mots de passe ne semblent pas correspondre</p>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col"></div>
                        </div>
                    </div>
                </div>
                <div class="col"></div>
            </div>
        </div>

        {% include '/utils/js_imports.html.twig' %}
    </body>
</html>