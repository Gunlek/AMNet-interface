{% extends 'utils/template.html.twig' %}
{% block title %}Connexion &bull; AMNet Birse{% endblock %}
{% block optional_style %}
    <style>
        body 
        {
            background-image: url('/img/cable_management.png');
            background-size: cover;
        }
    </style>
{% endblock %}

{% block header %}{% endblock %}

{% block content %}
    <div class="row centered-row" style="width: 75%;height: 75%;">
        <div class="col-4"></div>
        <div class="col-4 container" id="login-container">
            <h1 class="heading centered">Espace AMNet - Birse</h1>
            <br/>
            <h2 class="centered">Connexion</h2>
            <br/>
            <form method="POST" action="/users/process_login/">
                <div class="form-group">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" name="username" />
                </div>
                <br/>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="password" />
                </div>
                <br/>
                <a href="/access/lost_password/" target="_blank">Mot de passe oubli√©</a>
                <br/>
                <div class="form-group">
                    <input type="submit" class="btn btn-birse" style="height: 50px;" value="Connexion" />
                </div>
            </form>
            <div class="spacer vertical-200">&nbsp;</div>
        </div>
        <div class="col-4"></div>
    </div>
{% endblock %}