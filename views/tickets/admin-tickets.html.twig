<html>
    {% include '/utils/headers.html.twig' %}

    <body>
        {% include '/utils/menu.html.twig' %}

        <div class="container-fluid">
            <div class="row">
                <div class="col"></div>
                <div class="col-10 main-content-bg">
                    <br/>
                    <div class="container">
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Tickets ouverts</a>
                                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Tickets fermés</a>
                            </div>
                        </nav>
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                <br/>
                                <h4>Tickets ouverts</h4>
                                <br/><br/>
                                <table class="table table-striped">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Adresse MAC</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    {% for ticket in opened_tickets %}
                                        <tr id="{{ loop.index }}">
                                            <td>#{{ loop.index }}</td>
                                            <td>{{ ticket.ticket_subject }}</td>
                                            <td>{% if ticket.ticket_state == 0 %}<span class="badge badge-success">Ouvert</span>{% else %}<span class="badge badge-danger">Fermé</span>{% endif %}</td>
                                            <td>
                                                <a href="/tickets/view-ticket/?ticket_id={{ticket.ticket_id}}" class="btn btn-sm btn-primary"><i class="fas fa-comments"></i> Accéder</a>
                                                <a href="/tickets/close-ticket/{{ticket.ticket_id}}" class="btn btn-sm btn-danger"><i class="fas fa-time"></i> Clôturer</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>
                            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                                <br/>
                                <h4>Tickets fermés</h4>
                                <br/><br/>
                                <table class="table table-striped">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Sujet</th>
                                            <th>Etat</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    {% for ticket in closed_tickets %}
                                        <tr id="{{ loop.index }}">
                                            <td>#{{ loop.index }}</td>
                                            <td>{{ ticket.ticket_subject }}</td>
                                            <td>{% if ticket.ticket_state == 0 %}<span class="badge badge-success">Ouvert</span>{% else %}<span class="badge badge-danger">Fermé</span>{% endif %}</td>
                                            <td>
                                                <a href="/tickets/view-ticket/?ticket_id={{ticket.ticket_id}}" class="btn btn-sm btn-primary"><i class="fas fa-comments"></i> Accéder</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col"></div>
            </div>
        </div>

        {% include '/utils/js_imports.html.twig' %}
    </body>
</html>